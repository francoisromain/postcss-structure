{
  "name": "francoisromain.github.io.system.css",
  "version": "0.1.0",
  "scripts": {
    "babel": "babel system.css/src --out-dir system.css/lib",
    "lint": "stylelint src/*.css && stylelint system.css/*.css",
    "css": "postcss --local-plugins -u postcss-import -u postcss-custom-properties -u ./system.css -u postcss-cssnext -i src/styles.css -o dist/styles.css",
    "watch": "onchange 'index.html' 'src/**/*.*' 'system.css/src/**/*.*' -- npm run build",
    "reload": "livereload",
    "build": "npm run babel && npm run css",
    "start": "npm-run-all --parallel watch reload"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "normalize.css": "^4.2.0",
    "npm-run-all": "^2.3.0",
    "onchange": "^2.5.0",
    "postcss": "^5.0.21",
    "postcss-cli": "^2.5.2",
    "postcss-custom-properties": "^5.0.1",
    "postcss-import": "^8.1.2",
    "prismjs": "^1.5.1",
    "postcss-cssnext": "^2.7.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
