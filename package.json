{
  "name": "system.css",
  "version": "0.2.0",
  "description": "A bundle of PostCSS plugins.",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "buttons",
    "system.css"
  ],
  "author": "Francois Romain <francoisromain@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/francoisromain/system.css.git"
  },
  "bugs": {
    "url": "https://github.com/francoisromain/system.css/issues"
  },
  "homepage": "http://francoisromain.github.io/system.css/",
  "dependencies": {
    "postcss": "^5.0.19"
  },
  "scripts": {
    "build": "babel src --out-dir lib",
    "test": "ava && eslint *.js"
  },
  "main": "./lib/index.js",
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-cli": "^6.7.7",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "eslint": "^2.8.0",
    "eslint-config-airbnb": "^8.0.0",
    "eslint-plugin-import": "^1.6.0",
    "eslint-plugin-jsx-a11y": "^1.0.3",
    "eslint-plugin-react": "^5.0.1"
  },
  "dependencies": {
    "postcss-grid-system": "0.1.6",
    "postcss-grid-fluid": "0.1.2",
    "postcss-typescale": "0.1.1",
    "postcss-button": "0.1.4"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "rules": {
      "no-param-reassign": [
        "error",
        {
          "props": false 
        }
      ]
    }
  },
  "ava": {
    "files": [
      "test/tests.js"
    ],
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
