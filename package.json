{
  "name": "francoisromain.github.io.system.css",
  "version": "0.1.0",
  "scripts": {
    "lint": "stylelint src/*.css && stylelint system.css/*.css",
    "build": "postcss -u postcss-import -u postcss-custom-properties -u postcss-grid-system -u postcss-cssnext -i src/styles.css -o dist/styles.css",
    "watch": "onchange 'index.html' 'src/**/*.*' 'system.css/**/*.*' -- npm run build",
    "reload": "livereload",
    "start": "npm-run-all --parallel watch reload"
  },
  "dependencies": {
    "system.css": "^0.1.8"
  },
  "devDependencies": {
    "livereload": "^0.4.1",
    "npm-run-all": "^1.7.0",
    "onchange": "^2.4.0",
    "postcss-cli": "^2.5.1",
    "stylefmt": "^3.1.0",
    "stylelint": "^6.0.3",
    "stylelint-config-standard": "^6.0.0"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
