{
  "name": "francoisromain.github.io.postcss-structure",
  "version": "0.1.0",
  "scripts": {
    "babel": "babel postcss-structure/src --out-dir postcss-structure/lib",
    "lint": "stylelint src/*.css && stylelint postcss-structure/*.css",
    "css": "postcss src/styles.css -o dist/styles.css",
    "watch": "onchange 'index.html' 'src/**/*.*' 'postcss-structure/src/**/*.*' -- npm run build",
    "reload": "livereload",
    "build": "npm run babel && npm run css",
    "start": "npm-run-all --parallel watch reload"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "normalize.css": "^7.0.0",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "postcss": "^6.0.1",
    "postcss-cli": "^4.0.0",
    "postcss-custom-properties": "^6.0.1",
    "postcss-import": "^10.0.0",
    "prismjs": "^1.6.0",
    "postcss-cssnext": "^2.11.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
